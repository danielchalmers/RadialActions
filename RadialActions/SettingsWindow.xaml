<Window x:Class="RadialActions.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadialActions"
        xmlns:p="clr-namespace:RadialActions.Properties"
        d:DataContext="{d:DesignInstance Type=local:SettingsWindowViewModel}"
        mc:Ignorable="d"
        Title="Radial Actions - Settings"
        Width="550"
        MinHeight="400"
        ResizeMode="CanResize"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="MinWidth" Value="70" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="MinHeight" Value="26" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="4,2" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="MinHeight" Value="26" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl Padding="12,12,12,0"
                    SelectedIndex="{Binding Settings.SettingsTabIndex, Mode=TwoWay}">
            <TabItem Header="_General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,0,0,12">
                        <GroupBox Header="Activation" Margin="0,0,0,12">
                            <StackPanel Margin="8">
                                <TextBlock Text="Hotkey:" FontWeight="SemiBold" />
                                <TextBox Text="{Binding Settings.ActivationHotkey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="Examples: Ctrl+Alt+Space, Ctrl+Shift+R, Win+Z"
                                           FontStyle="Italic"
                                           FontSize="10"
                                           Foreground="Gray"
                                           Margin="0,2,0,0" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Appearance" Margin="0,0,0,12">
                            <StackPanel Margin="8">
                                <TextBlock Text="Menu Size (pixels):" FontWeight="SemiBold" />
                                <TextBox Text="{Binding Settings.Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="Recommended: 300-500"
                                           FontStyle="Italic"
                                           FontSize="10"
                                           Foreground="Gray"
                                           Margin="0,2,0,12" />

                                <CheckBox Content="Show center hole"
                                          IsChecked="{Binding Settings.ShowCenterHole, Mode=TwoWay}"
                                          Margin="0,0,0,4" />
                                <CheckBox Content="Show icons"
                                          IsChecked="{Binding Settings.ShowIcons, Mode=TwoWay}"
                                          Margin="0,0,0,4" />
                                <CheckBox Content="Show labels"
                                          IsChecked="{Binding Settings.ShowLabels, Mode=TwoWay}" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Startup">
                            <StackPanel Margin="8">
                                <CheckBox Content="Run on Windows startup"
                                          IsChecked="{Binding Settings.RunOnStartup, Mode=TwoWay}" />
                                <TextBlock Text="Starts the app minimized to tray when you log in."
                                           FontStyle="Italic"
                                           FontSize="10"
                                           Foreground="Gray"
                                           Margin="0,2,0,0" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="_Actions">
                <Grid Margin="0,8,0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="150" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Actions List -->
                    <ListBox Grid.Row="0"
                             ItemsSource="{Binding Settings.Actions}"
                             SelectedItem="{Binding SelectedAction}"
                             SelectedIndex="{Binding SelectedActionIndex}"
                             MinHeight="150"
                             MaxHeight="250">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4,2">
                                    <TextBlock Text="{Binding Icon}" FontSize="16" Width="24" />
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="4,0,8,0" />
                                    <TextBlock Text="{Binding Type}" VerticalAlignment="Center" Foreground="Gray" FontSize="11" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- List Controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,8">
                        <Button Content="Add" Command="{Binding AddActionCommand}" Margin="0,0,4,0" />
                        <Button Content="Remove" Command="{Binding RemoveActionCommand}" Margin="0,0,4,0" />
                        <Button Content="Move Up" Command="{Binding MoveUpCommand}" Margin="0,0,4,0" />
                        <Button Content="Move Down" Command="{Binding MoveDownCommand}" Margin="0,0,4,0" />
                        <Button Content="Reset to Defaults" Command="{Binding ResetActionsCommand}" Margin="8,0,0,0" />
                    </StackPanel>

                    <!-- Action Editor -->
                    <GroupBox Grid.Row="2" Header="Edit Action" 
                              IsEnabled="{Binding HasSelectedAction}">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,0,8,4" />
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding SelectedAction.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,4" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Icon:" VerticalAlignment="Center" Margin="0,0,8,4" />
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding SelectedAction.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,4" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Type:" VerticalAlignment="Center" Margin="0,0,8,4" />
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                      ItemsSource="{Binding ActionTypes}"
                                      SelectedItem="{Binding SelectedAction.Type, Mode=TwoWay}"
                                      Margin="0,0,0,4" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Parameter:" VerticalAlignment="Center" Margin="0,0,8,4" />
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                     Text="{Binding SelectedAction.Parameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,4" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Arguments:" VerticalAlignment="Center" Margin="0,0,8,0" />
                            <TextBox Grid.Row="4" Grid.Column="1" 
                                     Text="{Binding SelectedAction.Arguments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="H_elp">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,0,0,12">
                        <GroupBox Header="Quick Start" Margin="0,0,0,12">
                            <StackPanel Margin="8">
                                <TextBlock TextWrapping="Wrap">
                                    <Run FontWeight="Bold">1.</Run> Press
                                    <Run Text="{Binding Settings.ActivationHotkey, Mode=OneWay}" FontWeight="Bold" />
                                    to open the radial menu
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="0,4,0,0">
                                    <Run FontWeight="Bold">2.</Run> Click a slice to perform the action
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="0,4,0,0">
                                    <Run FontWeight="Bold">3.</Run> Click outside or press Escape to close
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Action Types" Margin="0,0,0,12">
                            <StackPanel Margin="8">
                                <TextBlock Margin="0,0,0,4">
                                    <Run FontWeight="Bold">MediaKey:</Run>
                                    <Run>PlayPause, NextTrack, PreviousTrack, Stop</Run>
                                </TextBlock>
                                <TextBlock Margin="0,0,0,4">
                                    <Run FontWeight="Bold">VolumeKey:</Run>
                                    <Run>VolumeUp, VolumeDown, Mute</Run>
                                </TextBlock>
                                <TextBlock Margin="0,0,0,4">
                                    <Run FontWeight="Bold">LaunchApp:</Run>
                                    <Run>Path to application or file</Run>
                                </TextBlock>
                                <TextBlock Margin="0,0,0,4">
                                    <Run FontWeight="Bold">OpenUrl:</Run>
                                    <Run>URL to open in browser</Run>
                                </TextBlock>
                                <TextBlock Margin="0,0,0,4">
                                    <Run FontWeight="Bold">RunCommand:</Run>
                                    <Run>Command to run in cmd</Run>
                                </TextBlock>
                                <TextBlock>
                                    <Run FontWeight="Bold">Keyboard:</Run>
                                    <Run>Keyboard shortcut (e.g., Ctrl+C)</Run>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Links" Margin="0,0,0,12">
                            <StackPanel Margin="8">
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://github.com/danielchalmers/RadialActions"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        📦 GitHub Repository
                                    </Hyperlink>
                                </TextBlock>
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://github.com/danielchalmers/RadialActions/releases"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        🚀 Check for Updates
                                    </Hyperlink>
                                </TextBlock>
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://github.com/danielchalmers/RadialActions/issues"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        🐛 Report a Bug / Request a Feature
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Other Projects by the Author">
                            <StackPanel Margin="8">
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://github.com/danielchalmers/DesktopClock"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        🕐 DesktopClock - A digital clock for your desktop
                                    </Hyperlink>
                                </TextBlock>
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://play.google.com/store/apps/details?id=com.danielchalmers.journalapp"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        📓 JournalApp - Stay on top of your well-being (Android)
                                    </Hyperlink>
                                </TextBlock>
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://github.com/danielchalmers/Network-Monitor"
                                               RequestNavigate="Hyperlink_RequestNavigate">
                                        📶 Network Monitor - See latency and bandwidth usage
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
