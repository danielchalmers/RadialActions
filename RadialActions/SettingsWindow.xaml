<Window x:Class="RadialActions.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RadialActions"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:RadialActions.Properties"
        Title="Settings"
        Width="1040" Height="760"
        MinWidth="900" MinHeight="620"
        d:DataContext="{d:DesignInstance Type=local:SettingsWindowViewModel}"
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="LabelTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <Style x:Key="DescriptionTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Margin" Value="0,2,0,12" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
        </Style>

        <Style x:Key="CardTitleTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Margin" Value="0,0,0,2" />
        </Style>

        <Style x:Key="CardDescriptionTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <Style x:Key="SettingsCard"
               TargetType="Border">
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" />
        </Style>

        <Style x:Key="SidebarListBoxItemStyle"
               TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="Margin" Value="0,0,0,6" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder"
                                CornerRadius="8"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter TargetName="ItemBorder"
                                        Property="Background"
                                        Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                <Setter TargetName="ItemBorder"
                                        Property="BorderBrush"
                                        Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                <Setter Property="Foreground"
                                        Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver"
                                               Value="True" />
                                    <Condition Property="IsSelected"
                                               Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="ItemBorder"
                                        Property="Background"
                                        Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Hyperlink"
               BasedOn="{StaticResource {x:Type Hyperlink}}">
            <Setter Property="TextDecorations" Value="None" />
        </Style>

        <Style x:Key="ProjectTitleTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="18" />
        </Style>

        <Style x:Key="ProjectDescriptionTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="12"
                Visibility="{Binding IsUpdateAvailable, Source={x:Static local:App.CurrentApp}, Converter={local:BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="18"
                           VerticalAlignment="Center"
                           Text="&#xE896;" />
                <StackPanel Grid.Column="2">
                    <TextBlock FontWeight="SemiBold"
                               FontSize="13"
                               TextWrapping="Wrap">
                        <Run Text="Update available: " />
                        <Run Text="{Binding LatestVersion, Source={x:Static local:App.CurrentApp}}" />
                    </TextBlock>
                    <TextBlock Margin="0,2,0,0"
                               TextWrapping="Wrap">
                        A newer version of Radial Actions is available.
                        <Hyperlink NavigateUri="https://github.com/danielchalmers/RadialActions/releases/latest"
                                   RequestNavigate="Hyperlink_RequestNavigate">
                            Learn more
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1"
              Margin="12,12,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Style="{StaticResource SettingsCard}"
                    Margin="0">
                <DockPanel LastChildFill="True">
                    <StackPanel DockPanel.Dock="Top"
                                Margin="0,0,0,10">
                        <TextBlock Text="Settings"
                                   FontWeight="SemiBold"
                                   FontSize="18" />
                        <TextBlock Text="Choose a section"
                                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Sections}"
                             SelectedValuePath="Index"
                             SelectedValue="{Binding SelectedSectionIndex, Mode=TwoWay}"
                             ItemContainerStyle="{StaticResource SidebarListBoxItemStyle}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding Icon}"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="14"
                                               VerticalAlignment="Top" />
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="{Binding Title}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="11"
                                                   Opacity="0.8"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <Grid Grid.Column="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Visibility="{Binding IsGeneralSectionSelected, Converter={local:BooleanToVisibilityConverter}}">
                    <Grid>
                        <StackPanel MaxWidth="680"
                                    HorizontalAlignment="Center">
                            <Border Style="{StaticResource SettingsCard}">
                                <StackPanel>
                                    <TextBlock Text="Activation"
                                               Style="{StaticResource CardTitleTextBlock}" />
                                    <TextBlock Text="Set the global keyboard shortcut that opens the radial menu."
                                               Style="{StaticResource CardDescriptionTextBlock}" />

                                    <TextBlock Text="Hotkey:"
                                               Style="{StaticResource LabelTextBlock}" />
                                    <TextBox Width="280"
                                             HorizontalAlignment="Left"
                                             Text="{Binding Settings.ActivationHotkey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             PreviewKeyDown="ActivationHotkey_PreviewKeyDown" />
                                    <TextBlock Text="Examples: Ctrl+Alt+Space, Ctrl+Shift+R, Win+Z"
                                               Style="{StaticResource DescriptionTextBlock}" />
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SettingsCard}">
                                <StackPanel>
                                    <TextBlock Text="Appearance"
                                               Style="{StaticResource CardTitleTextBlock}" />
                                    <TextBlock Text="Tune the visual footprint of the radial menu."
                                               Style="{StaticResource CardDescriptionTextBlock}" />

                                    <TextBlock Text="Menu Size (pixels):"
                                               Style="{StaticResource LabelTextBlock}" />
                                    <TextBox Width="130"
                                             HorizontalAlignment="Left"
                                             Text="{Binding Settings.Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Text="Recommended: 300-500"
                                               Style="{StaticResource DescriptionTextBlock}" />
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SettingsCard}">
                                <StackPanel>
                                    <TextBlock Text="Behavior"
                                               Style="{StaticResource CardTitleTextBlock}" />
                                    <TextBlock Text="Control how and where the menu behaves when triggered."
                                               Style="{StaticResource CardDescriptionTextBlock}" />

                                    <CheckBox Content="Keep menu open after clicking a slice"
                                              IsChecked="{Binding Settings.KeepMenuOpenAfterSliceClick, Mode=TwoWay}" />
                                    <TextBlock Text="The menu stays open until you click another app or press Escape."
                                               Style="{StaticResource DescriptionTextBlock}" />
                                    <CheckBox Margin="0,8,0,0"
                                              Content="Always open menu in screen center"
                                              IsChecked="{Binding Settings.OpenMenuInScreenCenter, Mode=TwoWay}" />
                                    <TextBlock Text="Useful for keyboard navigation when the pointer may be far from your focus."
                                               Style="{StaticResource DescriptionTextBlock}" />
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SettingsCard}">
                                <StackPanel>
                                    <TextBlock Text="Startup"
                                               Style="{StaticResource CardTitleTextBlock}" />
                                    <TextBlock Text="Background startup and update check options."
                                               Style="{StaticResource CardDescriptionTextBlock}" />

                                    <CheckBox Content="Run on Windows startup"
                                              IsChecked="{Binding Settings.RunOnStartup, Mode=TwoWay}" />
                                    <TextBlock Text="Starts the app minimized to tray when you log in."
                                               Style="{StaticResource DescriptionTextBlock}" />
                                    <CheckBox Margin="0,8,0,0"
                                              Content="Check for updates"
                                              IsChecked="{Binding Settings.CheckForUpdatesOnStartup, Mode=TwoWay}" />
                                    <TextBlock Text="Includes prereleases. Disable this if you don't want startup update checks."
                                               Style="{StaticResource DescriptionTextBlock}" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Visibility="{Binding IsActionsSectionSelected, Converter={local:BooleanToVisibilityConverter}}">
                    <Grid MaxWidth="1080"
                          HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="1.5*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Style="{StaticResource SettingsCard}"
                                Margin="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" MinHeight="180" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0"
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Actions"
                                               Style="{StaticResource CardTitleTextBlock}" />
                                    <TextBlock Text="Reorder and toggle actions shown in the radial menu."
                                               Style="{StaticResource CardDescriptionTextBlock}"
                                               Margin="0,0,0,0" />
                                </StackPanel>

                                <ListBox Grid.Row="1"
                                         MinHeight="180"
                                         ItemsSource="{Binding Settings.Actions}"
                                         SelectedIndex="{Binding SelectedActionIndex}"
                                         SelectedItem="{Binding SelectedAction}">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="4,2" />
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0"
                                                        Orientation="Horizontal">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsEnabled}"
                                                                         Value="False">
                                                                <Setter Property="Opacity" Value="0.45" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <TextBlock Text="{Binding Icon}"
                                                           Width="22"
                                                           FontSize="14" />
                                                <TextBlock Text="{Binding Name}"
                                                           Margin="4,0,6,0"
                                                           VerticalAlignment="Center" />
                                                <TextBlock Text="{Binding Type}"
                                                           VerticalAlignment="Center"
                                                           FontSize="10"
                                                           Foreground="Gray" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <Grid Grid.Row="2"
                                      Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0"
                                            Content="Add"
                                            Command="{Binding AddActionCommand}"
                                            HorizontalAlignment="Stretch" />
                                    <Button Grid.Column="2"
                                            Content="Remove"
                                            Command="{Binding RemoveActionCommand}"
                                            HorizontalAlignment="Stretch" />
                                    <Button Grid.Column="4"
                                            Content="Move Up"
                                            Command="{Binding MoveUpCommand}"
                                            HorizontalAlignment="Stretch" />
                                    <Button Grid.Column="6"
                                            Content="Move Down"
                                            Command="{Binding MoveDownCommand}"
                                            HorizontalAlignment="Stretch" />
                                </Grid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2"
                                Style="{StaticResource SettingsCard}"
                                Margin="0"
                                IsEnabled="{Binding HasSelectedAction}">
                            <Grid Grid.IsSharedSizeScope="True">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0"
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Edit Action"
                                               Style="{StaticResource CardTitleTextBlock}" />
                                    <TextBlock Text="Adjust name, icon, and execution behavior for the selected action."
                                               Style="{StaticResource CardDescriptionTextBlock}"
                                               Margin="0,0,0,0" />
                                </StackPanel>

                                <Grid Grid.Row="1"
                                      Grid.IsSharedSizeScope="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="ActionLabel" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               Text="Enabled:"
                                               Margin="0,0,8,8"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold" />
                                    <CheckBox Grid.Row="0"
                                              Grid.Column="1"
                                              Content="Show this action"
                                              IsChecked="{Binding SelectedAction.IsEnabled, Mode=TwoWay}"
                                              Margin="0,0,0,8" />

                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               Text="Name:"
                                               Margin="0,0,8,4"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold" />
                                    <TextBox Grid.Row="1"
                                             Grid.Column="1"
                                             Text="{Binding SelectedAction.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,0,4" />

                                    <TextBlock Grid.Row="2"
                                               Grid.Column="0"
                                               Text="Icon:"
                                               Margin="0,0,8,4"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold" />
                                    <TextBox Grid.Row="2"
                                             Grid.Column="1"
                                             Text="{Binding SelectedAction.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,0,4" />

                                    <TextBlock Grid.Row="3"
                                               Grid.Column="0"
                                               Text="Type:"
                                               Margin="0,0,8,4"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold" />
                                    <ComboBox Grid.Row="3"
                                              Grid.Column="1"
                                              Margin="0,0,0,4"
                                              ItemsSource="{Binding ActionTypes}"
                                              SelectedItem="{Binding SelectedActionType, Mode=TwoWay}" />

                                    <Grid Grid.Row="4"
                                          Grid.ColumnSpan="2"
                                          Margin="0,8,0,0"
                                          Visibility="{Binding SelectedActionType, Converter={local:MatchToVisibilityConverter}, ConverterParameter={x:Static local:ActionType.Key}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="ActionLabel" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="Key Action:"
                                                   Margin="0,0,8,4"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold" />
                                        <ComboBox Grid.Row="0"
                                                  Grid.Column="1"
                                                  SelectedValue="{Binding SelectedKeyActionId, Mode=TwoWay}"
                                                  SelectedValuePath="Id"
                                                  Margin="0,0,0,4"
                                                  IsTextSearchEnabled="True"
                                                  ItemsSource="{Binding KeyActionOptions}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Icon}"
                                                                   Width="20"
                                                                   FontSize="14" />
                                                        <TextBlock Text="{Binding Name}"
                                                                   Margin="4,0,0,0"
                                                                   VerticalAlignment="Center" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Text="Shortcut:"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Visibility="{Binding SelectedKeyActionId, Converter={local:MatchToVisibilityConverter}, ConverterParameter={x:Static local:SettingsWindowViewModel.CustomKeyActionId}}" />
                                        <TextBox Grid.Row="1"
                                                 Grid.Column="1"
                                                 Text="{Binding SelectedAction.Parameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Visibility="{Binding SelectedKeyActionId, Converter={local:MatchToVisibilityConverter}, ConverterParameter={x:Static local:SettingsWindowViewModel.CustomKeyActionId}}" />
                                    </Grid>

                                    <Grid Grid.Row="5"
                                          Grid.ColumnSpan="2"
                                          Margin="0,8,0,0"
                                          Visibility="{Binding SelectedActionType, Converter={local:MatchToVisibilityConverter}, ConverterParameter={x:Static local:ActionType.Shell}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="ActionLabel" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="Target:"
                                                   Margin="0,0,8,4"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold" />
                                        <Grid Grid.Row="0"
                                              Grid.Column="1"
                                              Margin="0,0,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="6" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                     Text="{Binding SelectedAction.Parameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            <Button Grid.Column="2"
                                                    Content="Browse..."
                                                    Command="{Binding BrowseShellTargetCommand}"
                                                    Padding="10,2" />
                                        </Grid>

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Text="Arguments:"
                                                   Margin="0,0,8,4"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold" />
                                        <TextBox Grid.Row="1"
                                                 Grid.Column="1"
                                                 Text="{Binding SelectedAction.Arguments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Margin="0,0,0,4" />

                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0"
                                                   Text="Working Directory:"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold" />
                                        <Grid Grid.Row="2"
                                              Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="6" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                     Text="{Binding SelectedAction.WorkingDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            <Button Grid.Column="2"
                                                    Content="Browse..."
                                                    Command="{Binding BrowseWorkingDirectoryCommand}"
                                                    Padding="10,2" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Visibility="{Binding IsAdvancedSectionSelected, Converter={local:BooleanToVisibilityConverter}}">
                    <StackPanel MaxWidth="760"
                                HorizontalAlignment="Center">
                        <Border Style="{StaticResource SettingsCard}">
                            <StackPanel>
                                <TextBlock Text="Tools"
                                           Style="{StaticResource CardTitleTextBlock}" />
                                <TextBlock Text="Open app folders and inspect local settings files."
                                           Style="{StaticResource CardDescriptionTextBlock}" />

                                <Button Content="Open Exe Folder"
                                        Command="{Binding OpenExeFolderCommand}"
                                        Margin="0,0,0,8" />
                                <Button Content="Open Settings File"
                                        Command="{Binding OpenSettingsFileCommand}"
                                        IsEnabled="{x:Static p:Settings.CanBeSaved}" />
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource SettingsCard}">
                            <StackPanel>
                                <TextBlock Text="App Info"
                                           Style="{StaticResource CardTitleTextBlock}" />
                                <TextBlock Text="Runtime and executable details for diagnostics."
                                           Style="{StaticResource CardDescriptionTextBlock}" />

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               FontWeight="SemiBold"
                                               Text="File Version" />
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="2"
                                               Text="{Binding FileVersion}" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               FontWeight="SemiBold"
                                               Text="Architecture" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="2"
                                               Text="{Binding Architecture}" />
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="0"
                                               FontWeight="SemiBold"
                                               Text="Runtime" />
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="2"
                                               Text="{Binding RuntimeDescription}" />
                                    <TextBlock Grid.Row="3"
                                               Grid.Column="0"
                                               FontWeight="SemiBold"
                                               Text="OS" />
                                    <TextBlock Grid.Row="3"
                                               Grid.Column="2"
                                               Text="{Binding OsDescription}" />
                                    <TextBlock Grid.Row="4"
                                               Grid.Column="0"
                                               FontWeight="SemiBold"
                                               Text="Executable" />
                                    <TextBlock Grid.Row="4"
                                               Grid.Column="2"
                                               Text="{Binding ExecutablePath}"
                                               TextWrapping="Wrap" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Visibility="{Binding IsHelpSectionSelected, Converter={local:BooleanToVisibilityConverter}}">
                    <StackPanel MaxWidth="920"
                                HorizontalAlignment="Center">
                        <Border Style="{StaticResource SettingsCard}">
                            <StackPanel>
                                <TextBlock Text="Radial Actions"
                                           FontSize="24"
                                           FontWeight="SemiBold" />
                                <TextBlock Margin="0,4,0,0"
