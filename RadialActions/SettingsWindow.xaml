<Window x:Class="RadialActions.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RadialActions"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:RadialActions.Properties"
        Title="Settings"
        Width="1200" Height="800"
        d:DataContext="{d:DesignInstance Type=local:SettingsWindowViewModel}"
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="SettingsCardGroupBox"
               TargetType="GroupBox"
               BasedOn="{StaticResource {x:Type GroupBox}}">
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="10"
                                        Padding="14">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <ContentPresenter Grid.Row="0"
                                                  Margin="0,0,0,8"
                                                  ContentSource="Header"
                                                  RecognizesAccessKey="True"
                                                  TextElement.FontSize="13"
                                                  TextElement.FontWeight="SemiBold" />
                                <ContentPresenter Grid.Row="1"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  ContentSource="Content" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <Style x:Key="DescriptionTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Margin" Value="0,4,0,12" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
        </Style>

        <Style x:Key="ActionEditorLabelTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="Margin" Value="0,0,8,4" />
        </Style>

        <Style TargetType="Hyperlink"
               BasedOn="{StaticResource {x:Type Hyperlink}}">
            <Setter Property="TextDecorations" Value="None" />
        </Style>

        <Style x:Key="ProjectTitleTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="18" />
        </Style>

        <Style x:Key="ProjectDescriptionTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Margin" Value="0,4,0,8" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="QuickStartStepTextBlock"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Margin" Value="0,0,0,4" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="ProjectTileStackPanel"
               TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,12,12" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="12"
                Visibility="{Binding IsUpdateAvailable, Source={x:Static local:App.CurrentApp}, Converter={local:BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="18"
                           VerticalAlignment="Center"
                           Text="&#xE896;" />
                <StackPanel Grid.Column="2">
                    <TextBlock FontWeight="SemiBold"
                               FontSize="13"
                               TextWrapping="Wrap">
                        <Run Text="Update available: " />
                        <Run Text="{Binding LatestVersion, Source={x:Static local:App.CurrentApp}}" />
                    </TextBlock>
                    <TextBlock Margin="0,2,0,0"
                               TextWrapping="Wrap">
                        A newer version of Radial Actions is available.
                        <Hyperlink NavigateUri="https://github.com/danielchalmers/RadialActions/releases/latest"
                                   RequestNavigate="Hyperlink_RequestNavigate">
                            Learn more
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <TabControl Grid.Row="1"
                    Padding="12,12,12,0"
                    SelectedIndex="{Binding Settings.SettingsTabIndex, Mode=TwoWay}">
            <TabItem Header="_General">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <GroupBox Header="Activation"
                                      Style="{StaticResource SettingsCardGroupBox}">
                                <StackPanel>
                                    <TextBlock Text="Hotkey:"
                                               Style="{StaticResource LabelTextBlock}" />
                                    <TextBox Text="{Binding Settings.ActivationHotkey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             PreviewKeyDown="ActivationHotkey_PreviewKeyDown" />
                                    <TextBlock Text="Examples: Ctrl+Alt+Space, Ctrl+Shift+R, Win+Z"
                                               Style="{StaticResource DescriptionTextBlock}" />
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Behavior"
                                      Style="{StaticResource SettingsCardGroupBox}">
                                <StackPanel>
                                    <CheckBox Content="Keep menu open after clicking a slice"
                                              IsChecked="{Binding Settings.KeepMenuOpenAfterSliceClick, Mode=TwoWay}" />
                                    <TextBlock Text="The menu stays open until you click another app or press Escape."
                                               Style="{StaticResource DescriptionTextBlock}" />
                                    <CheckBox Margin="0,8,0,0"
                                              Content="Always open menu in screen center"
                                              IsChecked="{Binding Settings.OpenMenuInScreenCenter, Mode=TwoWay}" />
                                    <TextBlock Text="Useful for keyboard navigation when the pointer may be far from your focus."
                                               Style="{StaticResource DescriptionTextBlock}" />
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <GroupBox Header="Appearance"
                                      Style="{StaticResource SettingsCardGroupBox}">
                                <StackPanel>
                                    <TextBlock Text="Menu Size (pixels):"
                                               Style="{StaticResource LabelTextBlock}" />
                                    <TextBox Text="{Binding Settings.Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Text="Recommended: 300-500"
                                               Style="{StaticResource DescriptionTextBlock}" />
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Startup"
                                      Style="{StaticResource SettingsCardGroupBox}">
                                <StackPanel>
                                    <CheckBox Content="Run on Windows startup"
                                              IsChecked="{Binding Settings.RunOnStartup, Mode=TwoWay}" />
                                    <TextBlock Text="Starts the app minimized to tray when you log in."
                                               Style="{StaticResource DescriptionTextBlock}" />
                                    <CheckBox Margin="0,8,0,0"
                                              Content="Check for updates"
                                              IsChecked="{Binding Settings.CheckForUpdatesOnStartup, Mode=TwoWay}" />
                                    <TextBlock Text="Includes prereleases. Disable this if you don't want startup update checks."
                                               Style="{StaticResource DescriptionTextBlock}" />
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="_Actions">
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="1.5*" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Column="0"
                              Header="Actions List"
                              VerticalContentAlignment="Stretch"
                              Style="{StaticResource SettingsCardGroupBox}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" MinHeight="150" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ListBox Grid.Row="0"
                                     MinHeight="150"
                                     ItemsSource="{Binding Settings.Actions}"
                                     SelectedIndex="{Binding SelectedActionIndex}"
                                     SelectedItem="{Binding SelectedAction}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="4,2" />
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEnabled}"
                                                                     Value="False">
                                                            <Setter Property="Opacity" Value="0.45" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="{Binding Icon}"
                                                       Width="22"
                                                       FontSize="14" />
                                            <TextBlock Text="{Binding Name}"
                                                       Margin="4,0,6,0" VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding Type}"
                                                       VerticalAlignment="Center"
                                                       FontSize="10"
                                                       Foreground="Gray" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Grid Grid.Row="1"
                                  Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0"
                                        Content="Add"
                                        Command="{Binding AddActionCommand}"
                                        HorizontalAlignment="Stretch" />
                                <Button Grid.Column="2"
                                        Content="Remove"
                                        Command="{Binding RemoveActionCommand}"
                                        HorizontalAlignment="Stretch" />
                                <Button Grid.Column="4"
                                        Content="Move Up"
                                        Command="{Binding MoveUpCommand}"
                                        HorizontalAlignment="Stretch" />
                                <Button Grid.Column="6"
                                        Content="Move Down"
                                        Command="{Binding MoveDownCommand}"
                                        HorizontalAlignment="Stretch" />
                            </Grid>
                        </Grid>
                    </GroupBox>

                    <!--  Action Editor  -->
                    <GroupBox Grid.Column="2"
                              Header="Edit Action"
                              VerticalContentAlignment="Stretch"
                              Style="{StaticResource SettingsCardGroupBox}"
                              IsEnabled="{Binding HasSelectedAction}">
                        <Grid Grid.IsSharedSizeScope="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ActionLabel" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Enabled:"
                                       Margin="0,0,8,8"
                                       Style="{StaticResource ActionEditorLabelTextBlock}" />
                            <CheckBox Grid.Row="0" Grid.Column="1"
                                      Content="Show this action"
                                      IsChecked="{Binding SelectedAction.IsEnabled, Mode=TwoWay}"
                                      Margin="0,0,0,8" />

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Name:"
                                       Style="{StaticResource ActionEditorLabelTextBlock}" />
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding SelectedAction.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,4" />

                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Icon:"
                                       Style="{StaticResource ActionEditorLabelTextBlock}" />
                            <TextBox Grid.Row="2" Grid.Column="1"
                                     Text="{Binding SelectedAction.Icon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,4" />

                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Text="Type:"
                                       Style="{StaticResource ActionEditorLabelTextBlock}" />
                            <ComboBox Grid.Row="3" Grid.Column="1"
                                      Margin="0,0,0,4"
                                      ItemsSource="{Binding ActionTypes}"
                                      SelectedItem="{Binding SelectedActionType, Mode=TwoWay}" />

                            <Grid Grid.Row="4" Grid.ColumnSpan="2"
                                  Margin="0,8,0,0"
                                  Visibility="{Binding SelectedActionType, Converter={local:MatchToVisibilityConverter}, ConverterParameter={x:Static local:ActionType.Key}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="ActionLabel" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Key Action:"
                                           Style="{StaticResource ActionEditorLabelTextBlock}" />
                                <ComboBox Grid.Row="0" Grid.Column="1"
                                          SelectedValue="{Binding SelectedKeyActionId, Mode=TwoWay}"
                                          SelectedValuePath="Id"
                                          Margin="0,0,0,4"
                                          IsTextSearchEnabled="True"
                                          ItemsSource="{Binding KeyActionOptions}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}"
                                                           Width="20"
                                                           FontSize="14" />
                                                <TextBlock Text="{Binding Name}"
                                                           Margin="4,0,0,0" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Shortcut:"
                                           Margin="0,0,8,0"
                                           Style="{StaticResource ActionEditorLabelTextBlock}"
                                           Visibility="{Binding SelectedKeyActionId, Converter={local:MatchToVisibilityConverter}, ConverterParameter={x:Static local:SettingsWindowViewModel.CustomKeyActionId}}" />
                                <TextBox Grid.Row="1" Grid.Column="1"
                                         Text="{Binding SelectedAction.Parameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Visibility="{Binding SelectedKeyActionId, Converter={local:MatchToVisibilityConverter}, ConverterParameter={x:Static local:SettingsWindowViewModel.CustomKeyActionId}}" />
                            </Grid>

                            <Grid Grid.Row="5" Grid.ColumnSpan="2"
                                  Margin="0,8,0,0"
                                  Visibility="{Binding SelectedActionType, Converter={local:MatchToVisibilityConverter}, ConverterParameter={x:Static local:ActionType.Shell}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="ActionLabel" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Target:"
                                           Style="{StaticResource ActionEditorLabelTextBlock}" />
                                <Grid Grid.Row="0" Grid.Column="1"
                                      Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="6" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding SelectedAction.Parameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button Grid.Column="2"
                                            Content="Browse..."
                                            Command="{Binding BrowseShellTargetCommand}"
                                            Padding="8,2" />
                                </Grid>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Arguments:"
                                           Style="{StaticResource ActionEditorLabelTextBlock}" />
                                <TextBox Grid.Row="1" Grid.Column="1"
                                         Text="{Binding SelectedAction.Arguments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,4" />

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Working Directory:"
                                           Margin="0,0,8,0"
                                           Style="{StaticResource ActionEditorLabelTextBlock}" />
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="6" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding SelectedAction.WorkingDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button Grid.Column="2"
                                            Content="Browse..."
                                            Command="{Binding BrowseWorkingDirectoryCommand}"
                                            Padding="8,2" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="Ad_vanced">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <GroupBox Grid.Column="0"
                                  Header="Tools"
                                  Style="{StaticResource SettingsCardGroupBox}">
                            <StackPanel>
                                <Button Content="Open Exe Folder"
                                        Command="{Binding OpenExeFolderCommand}"
                                        Margin="0,0,0,8" />
                                <Button Content="Open Settings File"
                                        Command="{Binding OpenSettingsFileCommand}"
                                        Margin="0,0,0,8"
                                        IsEnabled="{x:Static p:Settings.CanBeSaved}" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Grid.Column="2"
                                  Header="App Info"
                                  Style="{StaticResource SettingsCardGroupBox}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           FontWeight="SemiBold"
                                           Text="File Version" />
                                <TextBlock Grid.Row="0" Grid.Column="2"
                                           Text="{Binding FileVersion}" />
                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           FontWeight="SemiBold"
                                           Text="Architecture" />
                                <TextBlock Grid.Row="1" Grid.Column="2"
                                           Text="{Binding Architecture}" />
                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           FontWeight="SemiBold"
                                           Text="Runtime" />
                                <TextBlock Grid.Row="2" Grid.Column="2"
                                           Text="{Binding RuntimeDescription}" />
                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           FontWeight="SemiBold"
                                           Text="OS" />
                                <TextBlock Grid.Row="3" Grid.Column="2"
                                           Text="{Binding OsDescription}" />
                                <TextBlock Grid.Row="4" Grid.Column="0"
                                           FontWeight="SemiBold"
                                           Text="Executable" />
                                <TextBlock Grid.Row="4" Grid.Column="2"
                                           Text="{Binding ExecutablePath}"
                                           TextWrapping="Wrap" />
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="_Help">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="0"
                          MinHeight="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ViewportHeight}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="1.4*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <GroupBox Grid.Row="0"
                                      Header="About"
                                      Margin="0"
                                      Style="{StaticResource SettingsCardGroupBox}">
                                <StackPanel>
                                    <TextBlock Text="Radial Actions"
                                               FontSize="24"
                                               FontWeight="SemiBold" />
                                    <TextBlock Margin="0,4,0,0"
                                               Text="Summon a radial launcher for your everyday shortcuts."
                                               TextWrapping="Wrap" />
                                    <TextBlock Margin="0,0,0,4"
                                               Text="Configure slices in the Actions tab to run apps, files, scripts, and key actions."
                                               TextWrapping="Wrap" />
                                    <TextBlock Text="Use General settings to tune your activation hotkey, menu size, behavior, and startup."
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Grid.Row="2"
                                      Header="Quick Start"
                                      Margin="0"
                                      Style="{StaticResource SettingsCardGroupBox}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource QuickStartStepTextBlock}">
                                        <Run FontWeight="Bold">
                                            1.
                                        </Run>
                                        Press
                                        <Run Text="{Binding Settings.ActivationHotkey, Mode=OneWay}"
                                             FontWeight="Bold" />
                                        to open the radial menu</TextBlock>
                                    <TextBlock Style="{StaticResource QuickStartStepTextBlock}">
                                        <Run FontWeight="Bold">
                                            2.
                                        </Run>
                                        Click a slice to perform the action</TextBlock>
                                    <TextBlock Style="{StaticResource QuickStartStepTextBlock}">
                                        <Run FontWeight="Bold">
                                            3.
                                        </Run>
                                        Click outside or press Escape to close</TextBlock>
                                    <TextBlock Style="{StaticResource QuickStartStepTextBlock}"
                                               Text="Mouse tip: move toward a slice and click to trigger it quickly." />
                                    <TextBlock TextWrapping="Wrap"
                                               Text="Keyboard tip: open with the hotkey and press Escape to close without reaching for the mouse." />
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Grid.Row="4"
                                      Header="Support"
                                      Margin="0"
                                      Style="{StaticResource SettingsCardGroupBox}">
                                <StackPanel>
                                    <TextBlock Margin="0,0,0,8">
                                        <Hyperlink NavigateUri="https://github.com/danielchalmers/RadialActions"
                                                   RequestNavigate="Hyperlink_RequestNavigate">
                                            📦 View on GitHub
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock Margin="0,0,0,8">
                                        <Hyperlink NavigateUri="https://github.com/danielchalmers/RadialActions/issues"
                                                   RequestNavigate="Hyperlink_RequestNavigate">
                                            🐛 Report a Bug
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock Margin="0,0,0,8">
                                        <Hyperlink NavigateUri="https://github.com/danielchalmers/RadialActions/releases"
                                                   RequestNavigate="Hyperlink_RequestNavigate">
                                            🚀 Release Notes
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock Margin="0,0,0,8">
                                        <Hyperlink NavigateUri="radialactions://licenses"
                                                   RequestNavigate="Hyperlink_RequestNavigate">
                                            📜 Third-Party Licenses
                                        </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </GroupBox>
                        </Grid>

                        <GroupBox Grid.Column="2"
                                  Header="More from the Author"
                                  Margin="0"
                                  Style="{StaticResource SettingsCardGroupBox}">
                            <StackPanel>
                                <UniformGrid Columns="2"
                                             Margin="0,4,0,0">
                                    <StackPanel Style="{StaticResource ProjectTileStackPanel}">
                                        <TextBlock Style="{StaticResource ProjectTitleTextBlock}">
                                            <Hyperlink NavigateUri="https://github.com/danielchalmers/JournalApp"
                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                Good Diary
                                            </Hyperlink>
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource ProjectDescriptionTextBlock}"
                                                   Text="Track your daily activities and moods on Android." />
                                    </StackPanel>
                                    <StackPanel Style="{StaticResource ProjectTileStackPanel}">
                                        <TextBlock Style="{StaticResource ProjectTitleTextBlock}">
                                            <Hyperlink NavigateUri="https://github.com/danielchalmers/DesktopClock"
                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                DesktopClock
                                            </Hyperlink>
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource ProjectDescriptionTextBlock}"
                                                   Text="A digital clock for your desktop." />
                                    </StackPanel>
                                    <StackPanel Style="{StaticResource ProjectTileStackPanel}">
                                        <TextBlock Style="{StaticResource ProjectTitleTextBlock}">
                                            <Hyperlink NavigateUri="https://github.com/danielchalmers/SentryReplay"
                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                SentryReplay
